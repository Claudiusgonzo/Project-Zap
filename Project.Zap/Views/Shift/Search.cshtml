@{
    @using Microsoft.AspNetCore.Mvc.Localization

    @inject IViewLocalizer Localizer
}


@model Project.Zap.Models.SearchShiftViewModel

<form asp-controller="Shift" asp-action="Search" method="post">
    <div class="form-group">
        <label asp-for="@Model.Location"></label>
        <select asp-for="@Model.Location" asp-items="@Model.LocationNames">
        </select>
        <span asp-validation-for="@Model.Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Start"></label>
        <input type="datetime-local" asp-for="@Model.Start" />
        <span asp-validation-for="@Model.Start"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.Available"></label>
        <input type="checkbox" asp-for="@Model.Available" />
        <span asp-validation-for="@Model.Available"></span>
    </div>

    <button type="submit" class="btn btn-primary mb-2">@Localizer["SearchButton"]</button>
</form>