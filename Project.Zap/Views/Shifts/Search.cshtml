@{
    @using Microsoft.AspNetCore.Mvc.Localization

    @inject IViewLocalizer Localizer
}


@model Project.Zap.Models.SearchShiftViewModel
<form >
<div class="row">
    <div class="d-none d-xs-block d-sm-block col-md-4 font-weight-bold mt-2">Starting from</div>
    <div class="d-none d-xs-block d-sm-block col-md-4 font-weight-bold mt-2">Location</div>
    <div class="d-none d-xs-block d-sm-block col-md-3 font-weight-bold mt-2">ZipOrPostcode</div>
    <div class="d-none d-xs-block d-sm-block col-md-1 font-weight-bold mt-2 invisible">Search</div>
</div>

<div class="row">
    <div class="d-block d-xs-none d-sm-none col-xs-6 col-sm-6 font-weight-bold mt-2">@Localizer["TableStart"]</div>
    <div class="col-xs-6 col-sm-6 col-md-4 mt-2">
        <input type="datetime-local" asp-for="@Model.Start" class="form-control" />
        <span asp-validation-for="@Model.Start"></span>
    </div>

    <div class="d-block d-xs-none d-sm-none col-xs-6 col-sm-6 font-weight-bold mt-2">@Localizer["TableLocation"]</div>
    <div class="col-xs-6 col-sm-6 col-md-4 mt-2">
        <select class="form-control" asp-for="@Model.Locations" asp-items="@Model.LocationNames" multiple="multiple">
        </select>
        <span asp-validation-for="@Model.Locations"></span>
    </div>
    <div class="d-block d-xs-none d-sm-none col-xs-6 col-sm-6 font-weight-bold mt-2">@Localizer["TableZipOrPostcode"]</div>
    <div class="col-xs-6 col-sm-6 col-md-3 mt-2">
        <input type="text" asp-for="@Model.ZipOrPostcode" class="pl-5" />
        <span asp-validation-for="@Model.ZipOrPostcode"></span>
    </div>

    <div class="d-block d-xs-none d-sm-none col-xs-6 col-sm-6 font-weight-bold mt-2">@Localizer["TableSearch"]</div>
        <button type="submit" class="btn btn-primary mb-2 col-md-2"> Search </button>
    

</div>
    </form>